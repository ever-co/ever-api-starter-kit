		"@dataui/crud": "^5.3.1-alpha.3",
		"@dataui/crud-request": "^5.3.1-alpha.3",
		"@dataui/crud-typeorm ": "^5.3.1-alpha.3",
		"@ptc-org/nestjs-query-core": "^4.0.0",
